/* customize style */
.gt-container
  // common
  a
    color var(--v-accent-base) !important
    &:hover
      color var(--v-accent-lighten1) !important
      border-color var(--v-accent-lighten1) !important

  // icons
  .gt-svg
    svg
      margin-bottom 2px
      fill var(--v-accent-base) !important

  // loader
  .gt-spinner
    &::before
      border-top-color var(--v-accent-base) !important

  // button
  .gt-btn
    border 1px solid var(--v-accent-base) !important
    &-preview
      color var(--v-accent-base) !important
      &:hover
        border-color var(--v-accent-lighten1) !important
    &-public
      background-color var(--v-accent-base) !important
      &:hover
        background-color var(--v-accent-lighten1) !important
        border-color var(--v-accent-lighten1) !important

  // link
  .gt-link
    border-bottom none
    &:hover
      border-bottom 1px solid var(--v-accent-base) !important

  // meta
  .gt-meta
    z-index 1 !important

  // user
  .gt-user
    .is--poping
      .gt-ico
        svg
          fill var(--v-accent-base) !important

  // popup
  .gt-popup
    margin-top .3rem !important
    .gt-action
      &.is--active
        &:before
          top 0.6rem !important
          background var(--v-accent-base) !important

  // header
  .gt-header
    &-textarea:focus
      box-shadow inset 0 1px 2px rgba(27,31,35,.075), 0 0 0 0.2em rgba(232,103,107,.3) !important
    &-controls
      &-tip
        color var(--v-accent-base) !important

  // comment
  .gt-comment
    &-username
      color var(--v-accent-base) !important
    &-content
      &:hover
        border-radius 2px
        box-shadow inset 0 1px 2px rgba(27,31,35,.075), 0 0 0 0.1em rgba(232,103,107,.3) !important
